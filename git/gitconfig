[init]
  #templatedir = ~/.git_template
[push]
  default = simple
[color]
  ui = auto
[alias]
  st = status
  di = diff
  dic = diff --cached
  ci = commit
  br = branch
  co = checkout
[core]
  editor = vim
  excludesfile = ~/.gitignore
  autocrlf = input
[merge]
  ff = false
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[include]
  path = ~/.gitconfig.local
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line
